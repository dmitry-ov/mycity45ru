<h1>Новая метка</h1>

<% form_for(@placemark) do |f| %>
  <%= f.error_messages %>
  
  <p>
  <% Category.all.each do |c|  %>     
  <input id="placemark_category_id" name="placemark[category_id]" type="radio" value=<%=c.id%> <%= (Category.all.first==c ? "checked" : "")%> > <%=c.name%> <br />
   <% end %>
  </p>
  
  <p>
    <%= f.label :adress %><br />
    <%= f.text_field :adress %>
  </p>
  <p>
    <%= f.label :geopoint %><br />
    <%= f.text_field :geopoint %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :foto %><br />
    <%= f.text_field :foto %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', placemarks_path %>
