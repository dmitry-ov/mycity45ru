<h1>Editing placemark</h1>

<% form_for(@placemark) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :kind %><br />
    <%= f.text_field :kind %>
  </p>
  <p>
    <%= f.label :adress %><br />
    <%= f.text_field :adress %>
  </p>
  <p>
    <%= f.label :geopoint %><br />
    <%= f.text_field :geopoint %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :foto %><br />
    <%= f.text_field :foto %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @placemark %> |
<%= link_to 'Back', placemarks_path %>